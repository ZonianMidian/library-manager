{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"sourceMap": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"removeComments": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
